@page
@model EventsManagement.Pages.Feedback.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <h4>Feedback</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <span class="text-danger">*</span>
            <label asp-for="Feedback.ParticipantId" class="control-label">Participant</label>
            <select asp-for="Feedback.ParticipantId" class ="form-control" asp-items="ViewBag.ParticipantId">@ViewBag.Name</select>
        </div>

        <div class="form-group">
            <span class="text-danger">*</span>
            <label asp-for="Feedback.EventId" class="control-label">Event</label>
            <select asp-for="Feedback.EventId" class ="form-control" asp-items="ViewBag.EventId">@ViewBag.Name</select>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Rating" class="control-label"></label>
            <input asp-for="Feedback.Rating" class="form-control" max="5" />
            <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Comment" class="control-label"></label>
            <input asp-for="Feedback.Comment" class="form-control" />
            <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Feedback.Date" class="control-label"></label>
            <input asp-for="Feedback.Date" class="form-control" />
            <span asp-validation-for="Feedback.Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
